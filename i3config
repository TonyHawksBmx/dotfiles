# Volumen
# Subir
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
# Bajar
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%

# Controles para mpd con mpc
bindsym $mod+n mode "$Music"
mode "$Music" {
# Play / Pause
# Reproducir
	bindsym p exec mpc toggle
# Stop
# Detener
	bindsym s exec mpc stop
# Next
# Siguiente
	bindsym n exec mpc next
# Previous
# Anterior
	bindsym b exec mpc prev
	
	bindsym Escape mode "default"
    bindsym Return mode "default"
}

# Iniciar mpd
exec --no-startup-id mpd

# Set wallpaper with feh
# Establecer fondo de escritorio
exec_always feh --bg-scale /home/alejandro/Imágenes/'Ascent (Final).png'

# Compton with config
# Iniciar compton para corregir errores de tearing
exec --no-startup-id compton --config ~/.config/compton.conf -b

# Rofi
